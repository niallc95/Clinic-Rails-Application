<div class="container">
	<div class="signup-form">
		<center><p class="signup_login_text">Sign Up</p></center>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		  	<%= f.input :clinic_id, autofocus: true, label: "Clinic ID:",:maxlength => 15 %>
		  	<%= f.input :first_name, autofocus: true, label: "First Name:",:maxlength => 15  %>
		  	<%= f.input :last_name, autofocus: true, label: "Last Name:",:maxlength => 15  %>
		    <%= f.input :email, autofocus: true, label: "Email:",:maxlength => 30  %>
		    <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: "Password:",:maxlength => 15  %>
		    <%= f.input :password_confirmation, label: "Confirm Password:",:maxlength => 15  %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign up",class: "signup_button" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
