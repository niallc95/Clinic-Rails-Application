<%= simple_form_for @patient, :html => { :multipart => true } do |f| %>
	<%= select_tag(:condition_id, options_for_select(@conditions), :prompt => "Select Condition")%>
	<%= f.input :fname, label: "First Name",:maxlength => 10 %>
	<%= f.input :lname, label: "Family Name",:maxlength => 10  %>
	<%= f.input :address, label: "Address",:maxlength => 50  %>
	<%= f.input :dob, label: "Date of Birth",:maxlength => 11  %>
	<%= f.input :bloodtype, label: "Blood Type",:maxlength => 3  %>
	<%= f.input :alergies, label: "Alergies",:maxlength => 15  %>
	<center><%= f.button :submit, :class => 'button_one'  %></center>
<% end %>